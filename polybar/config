[colors]
;background = ${xrdb:color0:#222}
;background = #1c1b19
background = #151515
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #c5c8c6
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
purple = #5E2750


[module/weather]
type = custom/script
interval = 60
exec = result=$(curl --fail "wttr.in/?format=%C+%t" 2> /dev/null); if [ $? -eq 0 ] && (( ${#result} < 40 )); then echo $result; else echo; fi
label = %output%
tail = true
format-padding = 1

[bar/minimal]
foreground = #ffffff
background = #000000

height = 60
width = 15%
offset-x = 10
offset-y = 10

border-size = 2
border-color = #ffffff

modules-center = 2bwm_workspaces simple_date separator simple_bat
bottom = false

font-0 = Inconsolata:size=12;3

tray-position = none
override-redirect = true

padding = 10
radius = 1.0

[module/separator]
type = custom/text
content = |


[module/simple_date]
type = internal/date
interval = 5
time = "%H:%M"
time-alt = "%e %b"
format-padding = 1
label = %time%


[module/simple_bat]
type = custom/script
format = <label>
format-padding = 1
interval = 5.0
exec = $HOME/.config/polybar/scripts/bat.sh


