[module/2bwm]
type = custom/script
interval = 0.01
exec = echo $(( $(xprop -root _NET_CURRENT_DESKTOP | sed -e 's/_NET_CURRENT_DESKTOP(CARDINAL) = //') ))
tail = true
label = SPC %output%
format-padding = 1

